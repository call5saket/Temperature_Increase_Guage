<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    tools:context="testing.semicircleview.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <testing.semicircleview.SemiCircle
        xmlns:semiArc="http://schemas.android.com/apk/res-auto"

        android:id="@+id/semi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"


        semiArc:max="1000"
        semiArc:min="100"
        semiArc:step="100"
        semiArc:textColor="#CC11EE"
        semiArc:textSize="36sp"
        semiArc:progressColor="@color/color_progress"
        semiArc:progressWidth="12dp"
        semiArc:arcColor="@color/color_arc"

        semiArc:arcWidth="90dp"
        android:layout_marginBottom="20dp"

       />
</LinearLayout>
